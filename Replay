  <script>
    // Tic-Tac-Toe
    let ticTacToeBoard = [];
    let currentPlayer = 'X';
    function startTicTacToe() {
      ticTacToeBoard = ['', '', '', '', '', '', '', '', ''];
      currentPlayer = 'X';
      const boardDiv = document.getElementById('ticTacToeBoard');
      boardDiv.innerHTML = '';
      for(let i=0; i<9; i++) {
        const cell = document.createElement('button');
        cell.style.width = '60px';
        cell.style.height = '60px';
        cell.style.fontSize = '24px';
        cell.onclick = () => { if(cell.textContent===''){ cell.textContent=currentPlayer; ticTacToeBoard[i]=currentPlayer; currentPlayer = currentPlayer==='X'?'O':'X'; } };
        boardDiv.appendChild(cell);
      }
    }

    // Zahlenraten
    let randomNumber = Math.floor(Math.random()*10)+1;
    function checkGuess() {
      const guess = parseInt(document.getElementById('guessInput').value);
      const result = document.getElementById('guessResult');
      if(guess===randomNumber){
        result.textContent='Richtig! ðŸŽ‰';
        randomNumber = Math.floor(Math.random()*10)+1;
      } else {
        result.textContent='Falsch, versuche es nochmal ðŸ˜…';
      }
    }

    // Quiz
    function checkQuiz(answer){
      const result = document.getElementById('quizResult');
      if(answer===4){ result.textContent='Richtig! ðŸŽ‰'; }
      else{ result.textContent='Falsch ðŸ˜…'; }
    }

    // Memory
    let memoryCards = [];
    let memoryValues = [];
    function startMemory() {
      const board = document.getElementById('memoryBoard');
      board.innerHTML = '';
      memoryValues = ['ðŸŽ','ðŸŽ','ðŸŒ','ðŸŒ','ðŸ‡','ðŸ‡','ðŸ“','ðŸ“'];
      memoryValues.sort(() => 0.5 - Math.random());
      memoryCards = [];
      memoryValues.forEach((val,i)=>{
        const card = document.createElement('button');
        card.style.width='60px'; card.style.height='60px'; card.style.fontSize='24px';
        card.textContent='â“';
        card.dataset.value=val;
        card.onclick = () => revealCard(card);
        board.appendChild(card);
        memoryCards.push(card);
      });
    }
    let firstCard=null;
    function revealCard(card){
      if(card.textContent!=='â“') return;
      card.textContent=card.dataset.value;
      if(!firstCard){ firstCard=card; }
      else {
        if(firstCard.dataset.value!==card.dataset.value){
          setTimeout(()=>{ firstCard.textContent='â“'; card.textContent='â“'; firstCard=null; },500);
        } else { firstCard=null; }
      }
    }

    // Schere-Stein-Papier
    function playRPS(userChoice){
      const choices = ['Schere','Stein','Papier'];
      const computerChoice = choices[Math.floor(Math.random()*3)];
      let result='';
      if(userChoice===computerChoice) result='Unentschieden ðŸ¤';
      else if((userChoice==='Schere' && computerChoice==='Papier')||(userChoice==='Stein' && computerChoice==='Schere')||(userChoice==='Papier' && computerChoice==='Stein')) result='Du gewinnst! ðŸŽ‰';
      else result='Computer gewinnt ðŸ˜…';
      document.getElementById('rpsResult').textContent=`Computer wÃ¤hlte ${computerChoice}. ${result}`;
    }

    // Klicker-Spiel
    let clickerPoints = 0;
    function clickerGame(){
      clickerPoints++;
      document.getElementById('clickerPoints').textContent = clickerPoints;
    }

    // Pong
    let pongInterval, paddleY = 120, ballX=200, ballY=150, ballVX=2, ballVY=2;
    function startPong(){
      const canvas = document.getElementById('pongCanvas');
      const ctx = canvas.getContext('2d');
      paddleY=120; ballX=200; ballY=150; ballVX=2; ballVY=2;
      document.addEventListener('keydown', (e)=>{
        if(e.key==='ArrowUp') paddleY-=20;
        if(e.key==='ArrowDown') paddleY+=20;
        if(paddleY<0) paddleY=0;
        if(paddleY>240) paddleY=240;
      });
      clearInterval(pongInterval);
      pongInterval = setInterval(()=>{
        ctx.clearRect(0,0,400,300);
        // Paddle
        ctx.fillStyle='white'; ctx.fillRect(10,paddleY,10,60);
        // Ball
        ballX+=ballVX; ballY+=ballVY;
        if(ballY<0 || ballY>290) ballVY=-ballVY;
        if(ballX>390) ballVX=-ballVX;
        if(ballX<20 && ballY>paddleY && ballY<paddleY+60) ballVX=-ballVX;
        if(ballX<0){ ballX=200; ballY=150; }
        ctx.fillRect(ballX,ballY,10,10);
      },10);
    }
  </script>
